-- ðŸ¥Š Papita Golpeador v3 - Reparado (Golpes funcionales)
local uis = game:GetService("UserInputService")
local runService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local player = game.Players.LocalPlayer

-- GUI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "PapitaGolpeadorV3"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 270, 0, 160)
frame.Position = UDim2.new(0.5, -135, 0.5, -80)
frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", frame)
title.Text = "ðŸ’¥ Papita Golpeador v3"
title.Size = UDim2.new(1, 0, 0, 40)
title.Font = Enum.Font.GothamBold
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(255, 0, 0)
title.BackgroundTransparency = 1

local status = Instance.new("TextLabel", frame)
status.Text = "Estado: Inactivo (Presiona R o botÃ³n)"
status.Size = UDim2.new(1, 0, 0, 25)
status.Position = UDim2.new(0, 0, 0.3, 0)
status.Font = Enum.Font.Gotham
status.TextScaled = true
status.TextColor3 = Color3.fromRGB(255, 255, 255)
status.BackgroundTransparency = 1

local btn = Instance.new("TextButton", gui)
btn.Size = UDim2.new(0, 140, 0, 50)
btn.Position = UDim2.new(0.5, -70, 0.85, 0)
btn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
btn.TextColor3 = Color3.fromRGB(255, 255, 255)
btn.Font = Enum.Font.GothamBold
btn.TextScaled = true
btn.Text = "ðŸ¥Š Activar"
Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 12)

-- Variables
local active = false
local pulseTween
local character = player.Character or player.CharacterAdded:Wait()

-- ReconexiÃ³n al morir
player.CharacterAdded:Connect(function(char)
	character = char
end)

local function startPulse()
	if pulseTween then pulseTween:Cancel() end
	local pulseInfo = TweenInfo.new(0.3, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)
	pulseTween = TweenService:Create(btn, pulseInfo, {BackgroundColor3 = Color3.fromRGB(255, 100, 100)})
	pulseTween:Play()
end

local function stopPulse()
	if pulseTween then pulseTween:Cancel() end
	btn.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
end

local function activate()
	active = true
	status.Text = "Estado: Activo (Presiona R o botÃ³n para parar)"
	status.TextColor3 = Color3.fromRGB(0, 255, 0)
	btn.Text = "â›” Parar"
	startPulse()
end

local function deactivate()
	active = false
	status.Text = "Estado: Inactivo (Presiona R o botÃ³n)"
	status.TextColor3 = Color3.fromRGB(255, 255, 255)
	btn.Text = "ðŸ¥Š Activar"
	stopPulse()
end

local function toggle()
	if active then deactivate() else activate() end
end

-- Entradas
uis.InputBegan:Connect(function(input, processed)
	if not processed and input.KeyCode == Enum.KeyCode.R then
		toggle()
	end
end)

btn.MouseButton1Click:Connect(toggle)

-- Loop de golpes reparado
task.spawn(function()
	while true do
		if active and character then
			local tool = character:FindFirstChildOfClass("Tool")
			if tool then
				if tool:FindFirstChild("RemoteEvent") then
					-- Algunas herramientas usan RemoteEvent para activar
					pcall(function()
						tool.RemoteEvent:FireServer()
					end)
				elseif tool.Activate then
					-- Herramientas estÃ¡ndar con :Activate()
					pcall(function()
						tool:Activate()
						task.wait(0.01)
						tool:Deactivate() -- Esto ayuda a que se registre correctamente el siguiente golpe
					end)
				end
			end
		end
		task.wait(0.06) -- â‰ˆ16 golpes por segundo
	end
end)
